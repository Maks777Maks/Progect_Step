<Page x:Class="AUTOSALE_Entity_.Pages.AutorizationPageRUS"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AUTOSALE_Entity_.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AutorizationPageRUS">

    <Grid Background="#333">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Content="Логин" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Grid.Column="2" Name="Login"/>
        <Label Grid.Column="1" Grid.Row="1" Content="Пароль" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <PasswordBox Grid.Column="2" Grid.Row="1" Name="Password"/>
        <Button Content="OK" Grid.Column="1" Grid.Row="2" Margin="10 25 10 25" Click="Button_Click_Ok"/>
        <Button Content="РЕГИСТРАЦИЯ" Grid.Column="2" Grid.Row="2" Margin="10 25 10 25" Click="Button_Click_Reg"/>
    </Grid>
</Page>
