<Window x:Class="UDP_Chat_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDP_Chat_"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="222*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="433*"/>
            <ColumnDefinition Width="84*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.ColumnSpan="2" Name="_scrollViewer" Background="Red">
            <ListBox  Name="ListBox"/>
        </ScrollViewer>
        <TextBox Grid.Row="1" Name="Textbox"/>
        <Button Grid.Row="1" Grid.Column="1" Content="SEND" Click="Button_Click"/>
        <TextBox Name="Ip" Grid.Row="2"/>
    </Grid>
</Window>
